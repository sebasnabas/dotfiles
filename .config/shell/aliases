sudo_path="/usr/bin/sudo"
alias sudo="sudoer_lecture.py && $sudo_path"

alias mkvenv="mkvenv --system-site-packages"

alias tmux="tmux -2"
alias ip="ip -c"
alias l="ls -lAht"
alias r="ranger"

alias vim="nvim"

alias vimconfig="nvim \$MYVIMRC"
alias i3config="nvim ~/.config/i3/config"
alias zshconfig="nvim ~/.config/shell/zsh/.zshrc"

## directories
alias uni="pushd \$(getcurrentunipath \$UNI_PATH)"
alias p="pushd ~/Projects/"
alias w="if [ -d ~/Work/Projects/ ]; then pushd ~/Work/Projects; fi"

alias qemuu="docker run --rm --privileged multiarch/qemu-user-static --reset -p yes"
