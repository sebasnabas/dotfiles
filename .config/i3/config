    floating enable, border none, \
    resize set 1000 700, move position 400 100, \
    move scratchpad, scratchpad show

for_window [title="^Steam Keyboard$"] \
    floating enable, border none, \
    resize set 700 300, \
    move scratchpad, scratchpad show

