# #---Function Buttons---# #
bindsym $mod+F1	    exec --no-startup-id ~/.scripts/statusbar/polybar/powermenu
bindsym $mod+F2		exec --no-startup-id $i3cmds/prompt "Reboot computer?" "$reboot"
bindsym $mod+F3		exec --no-startup-id displayselect
bindsym $mod+F5		exec --no-startup-id $netrefresh
bindsym $mod+F6		exec --no-startup-id $i3cmds/torwrap
bindsym $mod+F9		exec --no-startup-id $i3cmds/dmenumount
bindsym $mod+F10	exec --no-startup-id $i3cmds/dmenuumount
bindsym $mod+F11	exec --no-startup-id $i3cmds/ducksearch
bindsym $mod+F12	exec $term -e nmtui

# #---Arrow Keys---# #
bindsym $mod+Left		exec --no-startup-id mpc prev
#bindsym $mod+Down		focus down
#bindsym $mod+Up			focus up
bindsym $mod+Right 		exec --no-startup-id mpc next

# move workspace between monitors
bindsym $mod+Shift+Left		move workspace to output left
bindsym $mod+Shift+Right 	move workspace to output right

# #---Media Keys---# #
# Volume keys
bindsym $mod+less 		exec --no-startup-id lmc prev
bindsym $mod+Shift+less		exec --no-startup-id lmc replay
bindsym $mod+greater		exec --no-startup-id lmc next

# Volume up/down
bindsym $mod+Down	    exec --no-startup-id amixer -D pulse sset Master 5%-
bindsym $mod+Up		exec --no-startup-id amixer -D pulse sset Master 5%+

# For advancing forward/backward in an mpd song
bindsym $mod+bracketleft 	exec --no-startup-id lmc back 10
bindsym $mod+Shift+bracketleft 	exec --no-startup-id lmc back 120
bindsym $mod+bracketright 	exec --no-startup-id lmc forward 10
bindsym $mod+Shift+bracketright exec --no-startup-id lmc forward 120

# For screenshots and recording
bindsym Print 			exec --no-startup-id maim pic-full-"$(date '+%y%m%d-%H%M-%S').png"
bindsym Shift+Print 		exec --no-startup-id maimpick
bindsym $mod+Scroll_Lock	exec --no-startup-id "killall screenkey || screenkey"
bindsym XF86Launch1		exec --no-startup-id xset dpms force off

# #--Microphone--# #
bindsym $mod+plus exec --no-startup-id amixer -D pulse sset Capture 5%+
bindsym $mod+minus exec --no-startup-id amixer -D pulse sset Capture 5%-

# #--Audio Mute on Keyboard without XF86 Keys--# #
bindsym $mod+F8		exec --no-startup-id amixer -q set Master toggle

# #--Microphone Mute--# #
bindsym $mod+F7     exec --no-startup-id amixer -q set Capture toggle

# #---Extra XF86 Keys---# #
bindsym XF86AudioMute		exec --no-startup-id amixer -q set Master toggle
bindsym XF86AudioLowerVolume	exec --no-startup-id amixer -D pulse sset Master 5%-
bindsym Shift+XF86AudioLowerVolume	exec --no-startup-id amixer -D pulse sset Master 15%-
bindsym Control+XF86AudioLowerVolume	exec --no-startup-id amixer -D pulse sset Master 1%-
bindsym XF86AudioRaiseVolume	exec --no-startup-id amixer -D pulse sset Master 5%+
bindsym Shift+XF86AudioRaiseVolume	exec --no-startup-id amixer -D pulse sset Master 15%+
bindsym Control+XF86AudioRaiseVolume	exec --no-startup-id amixer -D pulse sset Master 1%+
bindsym XF86PowerOff		exec --no-startup-id prompt "Shutdown computer?" "$shutdown"
