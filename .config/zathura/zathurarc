#set zoom-step 20
#set scroll-step 80

set selection-clipboard clipboard

set incremental-search true

set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 1

map <C-i> zoom in
map <C-o> zoom out

map u scroll half-up
map d scroll half-down
map D toggle_page_mode
map r reload
map R rotate
map i recolor
map p print
